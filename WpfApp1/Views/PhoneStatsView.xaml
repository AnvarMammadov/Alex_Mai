<UserControl x:Class="Alex_Mai.Views.PhoneStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alex_Mai.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Black">
        <StackPanel Margin="20">
            <TextBlock Text="STATS" Foreground="White" FontSize="28" FontFamily="{StaticResource GameFont}"/>
            <Separator Background="White" Margin="0,10"/>
            <TextBlock Text="{Binding StatsText}" Foreground="White" FontSize="18" FontFamily="{StaticResource GameFont}" TextWrapping="Wrap"/>
            <Button Content="Geri" Style="{StaticResource GameButtonStyle}" Margin="0,30,0,0"
                    Command="{Binding NavigateToHomeCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
