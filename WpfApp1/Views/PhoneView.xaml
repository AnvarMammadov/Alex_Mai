<UserControl x:Class="Alex_Mai.Views.PhoneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alex_Mai.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">

    <UserControl.Resources>
        <Style x:Key="PhoneHomeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="100">
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEEEEE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#1C1C1C" 
            CornerRadius="30"    
            BorderBrush="#333333" 
            BorderThickness="2"
            Height="600" Width="300">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="65"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse Fill="#444444" Width="8" Height="8" Margin="0,0,10,0"/>
                <Rectangle Fill="#444444" Width="40" Height="6" RadiusX="3" RadiusY="3"/>
            </StackPanel>

            <Border Grid.Row="1" Background="Black" CornerRadius="5">
                <ContentControl Content="{Binding CurrentScreenViewModel}" Margin="5"/>
            </Border>

            <Grid Grid.Row="2">
                <Button Command="{Binding ClosePhoneCommand}"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="50" Height="50" Style="{StaticResource PhoneHomeButtonStyle}"/>
            </Grid>
        </Grid>
    </Border>

</UserControl>