<UserControl x:Class="Alex_Mai.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alex_Mai.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <Style x:Key="GameSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border x:Name="Track" Height="4" Background="Gray" CornerRadius="2"/>
                            <Track Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="20" Height="20">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="Black" Stroke="White" StrokeThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Image Source="/Assets/Backgrounds/mmbg.jpg" Stretch="Fill" Opacity="0.5"/>
        <Border Background="#80000000"/>

        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="500"
                Background="{StaticResource GameBackgroundBrush}"
                BorderBrush="{StaticResource GameBorderBrush}"
                BorderThickness="2" CornerRadius="5" Padding="30">

            <StackPanel>
                <TextBlock Text="Tənzimləmələr" FontSize="36" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,30"
                           FontFamily="{StaticResource GameFont}"/>

                <TextBlock Text="Ümumi Səs" Foreground="Black" FontSize="18" FontFamily="{StaticResource GameFont}"/>
                <Slider Style="{StaticResource GameSliderStyle}" Minimum="0" Maximum="100" Value="{Binding CurrentSettings.MasterVolume, Mode=TwoWay}" Margin="0,5,0,20"/>

                <TextBlock Text="Musiqi Səsi" Foreground="Black" FontSize="18" FontFamily="{StaticResource GameFont}"/>
                <Slider Style="{StaticResource GameSliderStyle}" Minimum="0" Maximum="100" Value="{Binding CurrentSettings.MusicVolume, Mode=TwoWay}" Margin="0,5,0,20"/>

                <TextBlock Text="Səs Effektləri" Foreground="Black" FontSize="18" FontFamily="{StaticResource GameFont}"/>
                <Slider Style="{StaticResource GameSliderStyle}" Minimum="0" Maximum="100" Value="{Binding CurrentSettings.SfxVolume, Mode=TwoWay}" Margin="0,5,0,40"/>

                <Button Content="Yadda Saxla və Geri Qayıt" Command="{Binding SaveAndBackCommand}" Height="45"
                        Style="{StaticResource GameButtonStyle}"/>
            </StackPanel>

        </Border>
    </Grid>
</UserControl>