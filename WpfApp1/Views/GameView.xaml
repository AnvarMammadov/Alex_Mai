<UserControl x:Class="Alex_Mai.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:Alex_Mai.Converters"
             xmlns:local="clr-namespace:Alex_Mai.Views"
             xmlns:views="clr-namespace:Alex_Mai.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetName="CharacterImage" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="CharacterImage" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid MouseLeftButtonDown="OnGridMouseDown">
        <Image Source="{Binding CurrentBackground}" Stretch="UniformToFill"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">

            <Border BorderBrush="Black" BorderThickness="2" Background="#CCF5F5F5" CornerRadius="5" Padding="8">
                <StackPanel Orientation="Horizontal">
                    <Border BorderBrush="Black" BorderThickness="1" Width="50" Height="50" CornerRadius="100">
                        <Image Source="/Assets/Icons/ui_mai_icon.jpg"/>
                    </Border>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Mai" FontFamily="{StaticResource GameFont}" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding MaiMood}" FontFamily="{StaticResource GameFont}" FontSize="14" Foreground="#333"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="Black" BorderThickness="2" Background="#CCF5F5F5" CornerRadius="5" Padding="8" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <Border BorderBrush="Black" BorderThickness="1" Width="50" Height="50" CornerRadius="100">
                        <Image Source="/Assets/Icons/ui_alex_icon.jpg"/>
                    </Border>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Alex" FontFamily="{StaticResource GameFont}" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Money: " FontFamily="{StaticResource GameFont}" FontSize="14" Foreground="#333"/>
                            <TextBlock Text="{Binding CurrentGameState.PlayerMoney}" FontFamily="{StaticResource GameFont}" FontSize="14" Foreground="#333"/>
                        </StackPanel>
                        <ProgressBar Width="100" Height="10" Value="{Binding CurrentGameState.CurrentEnergy}" Maximum="100" Margin="0,2,0,0" Foreground="Gray" Background="DarkGray"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" Opacity="0.8">
            <Border BorderBrush="Black" BorderThickness="2" Background="#F5F5F5" CornerRadius="5"
            Padding="8,4" Margin="0,0,0,5">
                <TextBlock HorizontalAlignment="Center" FontFamily="{StaticResource GameFont}" FontSize="16">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}, {1}">
                            <Binding Path="CurrentGameState.FullDateString"/>
                            <Binding Path="CurrentGameState.DayOfWeek"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Border>

            <Border BorderBrush="Black" BorderThickness="2" Background="#F5F5F5" CornerRadius="100" 
            Width="100" Height="100">
                <TextBlock Text="{Binding MainTimeOfDay}" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontFamily="{StaticResource GameFont}" FontSize="18" FontWeight="Bold"/>
            </Border>

            <Border BorderBrush="Black" BorderThickness="2" Background="#CCF5F5F5" 
            CornerRadius="5" Padding="5" Margin="0,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding NextTimeSlot1}" Padding="5,2" FontSize="14" FontFamily="{StaticResource GameFont}" Foreground="Gray"/>
                    <TextBlock Text="|" Padding="5,2" FontSize="14" FontFamily="{StaticResource GameFont}" Foreground="LightGray"/>
                    <TextBlock Text="{Binding NextTimeSlot2}" Padding="5,2" FontSize="14" FontFamily="{StaticResource GameFont}" Foreground="Gray"/>
                    <TextBlock Text="|" Padding="5,2" FontSize="14" FontFamily="{StaticResource GameFont}" Foreground="LightGray"/>
                    <TextBlock Text="{Binding NextTimeSlot3}" Padding="5,2" FontSize="14" FontFamily="{StaticResource GameFont}" Foreground="Gray"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Image x:Name="CharacterImage" Source="{Binding CurrentCharacterSprite}" Stretch="Uniform">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentCharacterSprite}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Border BorderBrush="Black" BorderThickness="2" Background="#F5F5F5" CornerRadius="10" 
                Padding="5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,180" Opacity="0.8">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource GameButtonStyle}" BorderThickness="0" Width="50" Height="50" Margin="2"
                            Command="{Binding ToggleMapCommand}">
                    <Image Source="/Assets/Icons/door_icon.png"/>
                </Button>
            </StackPanel>
        </Border>
        <views:MapView DataContext="{Binding Map}"
             HorizontalAlignment="Center" VerticalAlignment="Center"
            Visibility="{Binding DataContext.IsMapOpen, 
              RelativeSource={RelativeSource AncestorType=local:GameView}, 
              Converter={StaticResource BoolToVisibilityConverter}}"
             d:Visibility="Collapsed"/>
        <Border BorderBrush="Black" BorderThickness="2" Background="#F5F5F5" CornerRadius="10" 
                Width="70" Height="70" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,180" Opacity="0.8">
            <Button Style="{StaticResource GameButtonStyle}" BorderThickness="0" Command="{Binding ToggleInventoryCommand}">
                <Image Source="/Assets/Icons/inventory_icon.png"/>
            </Button>
        </Border>
        <views:InventoryView DataContext="{Binding Inventory}"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding DataContext.IsInventoryOpen, 
                      RelativeSource={RelativeSource AncestorType=local:GameView}, 
                      Converter={StaticResource BoolToVisibilityConverter}}"
                     d:Visibility="Collapsed"/>

        <Border VerticalAlignment="Bottom" Height="150" Margin="80,0,80,10" BorderBrush="Black" BorderThickness="2" Background="#F5F5F5" CornerRadius="30" Opacity="0.7">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="Black" BorderThickness="2" Background="#F5F5F5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,-35,0,10" CornerRadius="2" Grid.Row="0">
                    <TextBlock Text="{Binding CharacterName}" FontSize="24" FontWeight="Bold" Padding="15,5" FontFamily="{StaticResource GameFont}"/>
                </Border>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
                    <TextBlock Text="{Binding CurrentDialogueText}" FontSize="22" TextWrapping="Wrap" FontFamily="{StaticResource GameFont}"/>
                </ScrollViewer>
                <ItemsControl ItemsSource="{Binding CurrentChoices}" HorizontalAlignment="Center" Visibility="{Binding AreChoicesVisible, Converter={StaticResource BoolToVisibilityConverter}}" Grid.Row="2">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Text}" 
                                 Margin="10,0" 
                                   Style="{StaticResource ChoiceButtonStyle}"
                             Command="{Binding DataContext.SelectChoiceCommand, RelativeSource={RelativeSource AncestorType=views:GameView}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <Border VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20,130,20,0"
                Background="#CC000000" BorderBrush="White" BorderThickness="1"
                CornerRadius="5" Padding="15,10"
                Visibility="{Binding IsNotificationVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding NotificationMessage}" Foreground="White"
                       FontFamily="{StaticResource GameFont}" FontSize="18"/>
        </Border>
        <views:PhoneView DataContext="{Binding Phone}"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 Width="300" Height="600"
                 Visibility="{Binding DataContext.IsPhoneOpen, 
                                      RelativeSource={RelativeSource AncestorType=local:GameView}, 
                                      Converter={StaticResource BoolToVisibilityConverter}}"
                 d:Visibility="Collapsed"/>
        <views:CookingGameView  DataContext="{Binding CookingGame}"
          HorizontalAlignment="Center" 
          VerticalAlignment="Center"
          Visibility="{Binding DataContext.IsCookingMinigameOpen, 
                               RelativeSource={RelativeSource AncestorType=local:GameView}, 
                               Converter={StaticResource BoolToVisibilityConverter}}"
          d:Visibility="Collapsed"/>
        <views:WorkMinigameView   DataContext="{Binding WorkGame}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Visibility="{Binding DataContext.IsWorkMinigameOpen, 
                       RelativeSource={RelativeSource AncestorType=local:GameView}, 
                       Converter={StaticResource BoolToVisibilityConverter}}"
         d:Visibility="Collapsed"/>
        <views:MarketView DataContext="{Binding Market}"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          Visibility="{Binding DataContext.IsMarketOpen, 
                                       RelativeSource={RelativeSource AncestorType=local:GameView}, 
                                       Converter={StaticResource BoolToVisibilityConverter}}"
                          d:Visibility="Collapsed"/>

    </Grid>
</UserControl>