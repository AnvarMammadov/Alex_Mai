<UserControl x:Class="Alex_Mai.Views.CalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alex_Mai.Views"
             xmlns:viewModels="clr-namespace:Alex_Mai.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels:CalendarViewModel}"
             d:DesignHeight="500" d:DesignWidth="280" Background="Black">

    <UserControl.Resources>
        <Style x:Key="EventEntryStyle" TargetType="Border">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Opacity" Value="1.0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#111111" Padding="10">
            <Grid VerticalAlignment="Center">
                <Button Command="{Binding NavigateToHomeCommand}" VerticalAlignment="Center" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Foreground="White" Content="&lt; Back"/>
                <TextBlock Text="Calendar" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#1C1C1C" Padding="20,15" BorderBrush="#333" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding CurrentDay}" 
                           Foreground="White" 
                           FontSize="48" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentDayOfWeek}" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentMonth}" 
                               Foreground="#999999" 
                               FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="2" Margin="10,10,10,10"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="False">

            <ItemsControl ItemsSource="{Binding Events}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#333333" CornerRadius="3" Padding="8,4" MinWidth="50" VerticalAlignment="Center">
                                    <TextBlock Foreground="White" FontWeight="Bold" TextAlignment="Center">
                                        <Run Text="Sep"/>
                                        <Run Text="{Binding Day}"/>
                                    </TextBlock>
                                </Border>

                                <TextBlock Grid.Column="1" Text="{Binding Title}" 
                                           Foreground="White" VerticalAlignment="Center" 
                                           Margin="10,0,0,0" TextWrapping="Wrap"/>
                            </Grid>

                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource EventEntryStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsToday}" Value="True">
                                            <Setter Property="Background" Value="#3a4a3a"/>
                                            <Setter Property="BorderBrush" Value="LightGreen"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsPast}" Value="True">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>