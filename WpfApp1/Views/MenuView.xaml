<UserControl x:Class="Alex_Mai.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alex_Mai.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <CubicEase x:Key="CubicEaseOut" EasingMode="EaseOut"/>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="RootGrid" 
                                     Storyboard.TargetProperty="Opacity" 
                                     From="0" To="1" 
                                     Duration="0:0:2.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid x:Name="RootGrid" Opacity="0">

        <Image Source="\Assets\Backgrounds\mmbg.jpg" Stretch="UniformToFill"/>

        <Rectangle>
            <Rectangle.Fill>
                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                    <GradientStop Color="#00000000" Offset="0.4"/>
                    <GradientStop Color="#CC000000" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#40000000">
                <Grid VerticalAlignment="Center" Margin="60,0,0,0">
                    <Border HorizontalAlignment="Left" Width="1" Background="#80FFFFFF" 
                            Height="300" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <StackPanel VerticalAlignment="Center" Margin="20,0,0,0">

                        <Button Content="New Game" 
                                Style="{StaticResource MainMenuButtonStyle}" 
                                Command="{Binding StartGameCommand}"
                                MouseEnter="Button_MouseEnter"/>

                        <Button Content="{Binding LoadGameButtonText}" 
                                IsEnabled="{Binding IsLoadGameEnabled}"
                                Style="{StaticResource MainMenuButtonStyle}" 
                                Command="{Binding LoadGameCommand}"
                                MouseEnter="Button_MouseEnter"/>

                        <Button Content="Settings" 
                                Style="{StaticResource MainMenuButtonStyle}" 
                                Command="{Binding SettingsCommand}"
                                MouseEnter="Button_MouseEnter"/>

                        <Button Content="Quit" 
                                Style="{StaticResource MainMenuButtonStyle}" 
                                Command="{Binding QuitGameCommand}"
                                MouseEnter="Button_MouseEnter"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="100,0,0,50">

                    <StackPanel.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        From="100,50,0,50" To="100,0,0,50"
                                                        Duration="0:0:3" EasingFunction="{StaticResource CubicEaseOut}"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1"
                                                     Duration="0:0:3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </StackPanel.Triggers>

                    <TextBlock Text="M A I" 
                               Foreground="White" 
                               FontFamily="{StaticResource GameFont}"
                               FontSize="90" 
                               FontWeight="Thin"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Separator Width="100" Background="White" Opacity="0.6" Margin="0,5,0,10"/>

                    <TextBlock Text="My Affection Inside" 
                               Foreground="#DDDDDD" 
                               FontFamily="{StaticResource GameFont}"
                               FontSize="22"
                               FontWeight="Light"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <TextBlock Text="ver 0.1 (Alpha)" Foreground="Gray" Grid.Column="0" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                       Margin="20" FontSize="12" Opacity="0.5"/>
        </Grid>
    </Grid>
</UserControl>